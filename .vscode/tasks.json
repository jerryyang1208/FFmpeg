{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "E:\\VS_Code\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // FFmpeg libraries
                "-L", 
                "${fileDirname}\\FFmpeg-n7.0.2-3-win64-lgpl-shared-7.0\\lib",
                "-I",
                "${fileDirname}\\FFmpeg-n7.0.2-3-win64-lgpl-shared-7.0\\include",
                "-lavformat", "-lavcodec", "-lavutil", "-lavdevice", "-lswscale", "-lavfilter", "-lswresample",
                // SDL2 libraries
                "-L", 
                "${fileDirname}\\SDL2-2.30.6\\lib\\x64",
                "-I",
                "${fileDirname}\\SDL2-2.30.6\\include",
                "-lSDL2main", "-lSDL2",
                // Output file
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}